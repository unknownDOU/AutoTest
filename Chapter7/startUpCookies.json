[
  {
    "description": "模拟一个返回cookies的get请求",
    "request": {
      "uri": "/getCookies",
      "method": "get"
    },
    "response": {
      "cookies": {
        "name": "true"
      },
      "text": "获取cookies成功"
    }
  },
  {
    "description": "模拟一个必须传cookies的get请求",
    "request": {
      "uri": "/get/demo/cookies",
      "method": "get",
      "cookies": {
        "name": "true"
      }
    },
    "response": {
      "text": "这个一个带有cookies的get请求"
    }
  },
  {
    "description": "模拟一个必须传cookies的post请求",
    "request": {
      "uri": "/post/demo/cookies",
      "method": "post",
      "cookies": {
        "name": "true"
      },
      "json": {
        "name": "zhangsan",
        "age": "18"
      }

    },
    "response": {
      "json": {
        "message": "success",
        "status": "1"
      }
    }
  }
